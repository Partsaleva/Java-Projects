package oneYearLove.source.fileControl;

import java.io.BufferedInputStream;
import java.io.BufferedOutputStream;
import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.util.Calendar;

public class DateControl {

	public boolean isTheSameDay() {
		Calendar today=Calendar.getInstance();
		Calendar dateOfLastExecution=getDateOfLastExecution();
		return today.get(Calendar.YEAR) == dateOfLastExecution.get(Calendar.YEAR) &&
				today.get(Calendar.DAY_OF_YEAR) == dateOfLastExecution.get(Calendar.DAY_OF_YEAR);
	}
	

	public void saveDateOfExecution() {
		Calendar today = Calendar.getInstance();
		try(ObjectOutputStream out =new ObjectOutputStream(
				new FileOutputStream("bin"+File.separator+"date"))){
			
			out.writeObject(today);
			
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public Calendar getDateOfLastExecution(){
		ClassLoader classLoader = getClass().getClassLoader();
		InputStream stream =classLoader.getResourceAsStream("date");
		Calendar date=null;
		
		try(ObjectInputStream in=new ObjectInputStream(
				new BufferedInputStream(stream))){
			
			date=(Calendar) in.readObject();
			
		} catch (IOException e) {
			e.printStackTrace();
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		}
		return date;
		
	}

	public void saveDayNumber() {
		nullCounter();
		
		int day=getDayNumber();
		try(DataOutputStream out = new DataOutputStream(
			new BufferedOutputStream(
                        new FileOutputStream("bin"+File.separator+"day")))){
			
			out.writeInt(day+1);
			
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public Integer getDayNumber(){
		ClassLoader classLoader = getClass().getClassLoader();
		InputStream stream =classLoader.getResourceAsStream("day");
		int day=0;
		
		try(DataInputStream in=new DataInputStream(
				new BufferedInputStream(stream))){
			day=in.readInt();
		} catch (IOException e) {
			e.printStackTrace();
		}
		return day;
		
	}
	
	private void nullCounter(){
		try(DataOutputStream out = new DataOutputStream(
			new BufferedOutputStream(
                        new FileOutputStream("bin"+File.separator+"day")))){
			
			out.writeInt(0);
			
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
